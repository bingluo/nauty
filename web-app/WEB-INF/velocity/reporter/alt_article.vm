        <script src="$!{viewUtil.getContextPath()}/static/js/bootstrap-datetimepicker.min.js"></script>
        <script src="$!{viewUtil.getContextPath()}/static/js/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>
