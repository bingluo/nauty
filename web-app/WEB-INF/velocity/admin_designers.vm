#parse("admin_header.vm")
#parse("admin_sidebar.vm")
<div id="content">
	<div id="content-header">
		<h1>设计师管理</h1>
	</div>
	<div id="breadcrumb">
		<a href="$!{viewUtil.getContextPath()}/admin/article_list" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> 首页</a>
		<a href="#" class="current">设计师管理</a>
	</div>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span12">
				<div class="widget-content nopadding">
					<div class="control-group">
						<div class="controls">
							<input style="" type="text" value="$!searchInput" placeHolder="设计师检索" id="search_input"/>
							&nbsp;
							<span style="" margin-left:10px; margin-right:20px" class="icon" id="search_article_btn">
								<a href="javascript:void(0)" class="btn btn-success btn" style="vertical-align:middle; margin-top:-6px;">
									&nbsp;&nbsp;<i class="icon-play icon-white"></i>&nbsp;&nbsp;
								</a>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<div class="widget-box">
					<div class="widget-title">
						<span class="icon">
							<i class="icon-th"></i>
						</span>
						<h5>设计师列表</h5>
					</div>
					<div class="widget-content padding">
						<table class="table table-bordered table-striped">
							<thead>
								<tr>
									<th style="width:6%">ID</th>
									<th>设计师</th>
									<th>Email</th>
									<th style="width:5%">简介</th>
									<th style="width:7%">头像</th>
									<th style="width:15%">注册时间</th>
									<th style="width:15%">认证时间</th>
									<th>操作</th>
								</tr>
							</thead>
							<tbody>
								#foreach($designer in $designer_list)
									<tr>
										<td>$designer.id</td>
										<td>$designer.userName</td>
										<td>$designer.email</td>
										<td>$designer.intro</td>
										<td>$designer.avatar</td>
										<td>$viewUtil.fTime("$designer.registerTime")</td>
										<td>$viewUtil.fTime("$designer.certificateTime")</td>
										<td>
											<button class="btn btn-danger" title="删除设计师" id="del_btn"><i class=" icon-trash icon-white"></i></button>
										</td>
									</tr>
								#end
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<input id="context_path" type="hidden" value="$!{viewUtil.getContextPath()}"/>


<script language="javascript">
	$("#sidebar_li_8").siblings().removeClass('active')
	$("#sidebar_li_8").addClass('active');
	var context_path = $("#context_path").val();



</script>
#parse("admin_footer.vm")