<!DOCTYPE html>
<!--[if IE 7 ]><html class="ie ie7" lang="en"><![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"><![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"><!--<![endif]-->
#parse("common/head.vm")
<body>
<!-- Wrapper Start -->
<div id="wrapper">
<!-- Header
================================================== -->
    <!-- 960 Container -->
    <div class="container ie-dropdown-fix">
    	<!-- Header -->
    	#parse("common/header.vm")
    	<!-- Header / End -->
    	<!-- Navigation -->
    	#parse("common/navi.vm")
    	<!-- Navigation / End -->
    </div>
    <!-- 960 Container / End -->
    <!-- 960 Container -->
    <div class="container">
		<div class="sixteen columns">
    		<div id="page-title">
    			<h2 style="padding: 10px 0 10px 0;">
					<a href="$!{viewUtil.getContextPath()}/activity" style="color:#333">活动赛事</a>
					<span> / <a href="$!{viewUtil.getContextPath()}/activity/$!{activity.id}" style="color:#aaa">$!{activity.title}</a></span>
				</h2>
    			<div id="bolded-line"></div>
    		</div>
    	</div>
    	<div class="twelve columns">
            <!-- Headline -->
            <div class="no-margin icon-box tooltips" style="height: 45px;"><i class="ico-podium" style="margin:-7px 0 0 -10px;"></i>
            	<h3>参赛作品</h3>
    		</div>
			#foreach($work in $works)
			<div style="width:220px;float:left;#if($velocityCount==1)margin-right:10px;#elseif($velocityCount==3)margin-left:10px;#else margin:0 10px;#end">
        		<div class="picture">
        			<a href="$!{viewUtil.getContextPath()}/activity/$!{activity.id}/works/$!{work.id}">
        				<img src="$!{viewUtil.getContextPath()}/static/works/$!{work.workPics.get(0)}" style="height:139px" />
        				<div class="image-overlay-link" style="opacity: 0; display: block;"></div>
        			</a>
        		</div>
        		<div class="item-description" style="margin-top:10px;">
					<div style="display:inline;width:160px;">
						<a href="$!{viewUtil.getContextPath()}/activity/$!{activity.id}/works/$!{work.id}" style="font-weight:bold;margin-bottom:10px;">$!{work.workName}</a>
						<br/>票数：$!{work.voteCount}
					</div>
					<div style="display:inline">
						<label class="button color" style="color:#fff;margin:-15px 0px -10px 0px;float:right;" voteTo="$!{viewUtil.getContextPath()}/activity/$!{activity.id}/works/$!{work.id}/vote">投票</label>
					</div>
				</div>
			</div>
			#end
			
			<div class="clear"></div>
			#if($pageCount>1)
           	<ul class="pagination">
        		#if($pageIndex<=5)
        			#set($base = 1)
        			#if($pageCount<=10)
        				#set($high = $pageCount)
        			#else
        				#set($high = 10)
        			#end
        		#else
    				<a href="$!{viewUtil.getContextPath()}$!{url}?pn=1"><li>首页</li></a>
        			#set($base = $pageIndex - 4)
        			#if($pageCount > $pageIndex + 5)
        				#set($high = $pageIndex + 5)
        			#else
        				#set($high = $pageCount)
        			#end
        		#end
        		#foreach($i in [$base..$high])
        			#if($pageIndex!=$i)<a href="$!{viewUtil.getContextPath()}/activity/$!{activity.id}/works?pn=$i">#end
        				<li #if($pageIndex==$i)class="current"#end>$i</li>
        			#if($pageIndex!=$i)</a>#end
        		#end
        		#if($pageIndex<$pageCount)
        			#set($next = $pageIndex + 1)
           		<a href="$!{viewUtil.getContextPath()}/activity/$!{activity.id}/works?pn=$!{next}"><li>下一页></li></a>
           		<a href="$!{viewUtil.getContextPath()}/activity/$!{activity.id}/works?pn=$!{pageCount}"><li>尾页</li></a>
        		#end
           	</ul>
    		#end
    		<div style="padding-top: 20px;">共 $!{pageCount} 页 $!{workCount} 条</div>
		</div>
		<div class="four columns">
			<div class="headline no-margin"><h4>报名时间</h4></div>
        	<!-- Large Notice -->
        	<div class="large-notice" style="padding:25px;">
        		<h5>开始：$!{activity.actBeginTime}</h5>
        		<h5>截止：$!{activity.actEndTime}</h5>
        		<p></p>
        		<p>欢迎各位踊跃报名参与！</p>
				#if($applyStatus==3)
					<a href="javascript:void(0)" class="button medium gray">尚未开始</a>
				#elseif($activityApplied)
            		<a href="javascript:void(0)" class="button medium light">已报名</a>
				#elseif($applyStatus==1)
            		<a href="$viewUtil.getContextPath()/activity/$!{activity.id}/apply" class="button medium color">报名</a>
				#else
					<a href="javascript:void(0)" class="button medium gray">已结束</a>
				#end
        	</div>
			<div class="headline no-margin" style="margin-top:10px;"><h4>活动时间</h4></div>
        	<div class="large-notice" style="padding:25px;">
        		<h5>开始：$!{activity.actBeginTime}</h5>
        		<h5>开始：$!{activity.actEndTime}</h5>
        		<p></p>
				#if($activityStatus==3)
        		<a href="javascript:void(0)" class="button medium gray">尚未开始</a>
				#elseif($activityStatus==2)
        		<a href="javascript:void(0)" class="button medium gray">已结束</a>
				#elseif(!$activityApplied)
        		<a href="javascript:void(0)" class="button medium gray">尚未报名</a>
				#else
            	<a href="$viewUtil.getContextPath()/activity/$!{activity.id}/new-work" class="button medium color" disabled="disabled">上传作品</a>
				#end
        	</div>
            <div class="icon-box widget tooltips">
            	<i class="ico-comments" style="margin:-8px 0 0 0px"></i>
    			<a href="$!{viewUtil.getContextPath()}/activity/$!{activity.id}/news" rel="tooltip" data-original-title="查看更多" class="button color" style="margin:6px 5px 0 0px;padding:2px 5px;float:right">more</a>
            	<h4 style="margin-top: 0px;">活动新闻</h4>
    			<ul class="circle_list" style="margin-top: 15px;">
					#foreach($news in $recentNews)
    				<li>
    					<div class="latest-post-blog" style="margin-bottom:8px;">
                           	<a href="$!{viewUtil.getContextPath()}/activity/$!{activity.id}/news/$!{news.id}" style="color: rgb(102, 102, 102); text-decoration: none;">$!{news.title}</a>
    					</div>
                	</li>
					#end
    			</ul>
            </div>
		</div>
    </div>
    <!-- End 960 Container -->
</div>
<!-- Wrapper / End -->
<!-- Footer Start -->
#parse("common/footer.vm")
<!-- Footer / End -->
</body>
<script language="JavaScript">
$formAction = $("#registertForm").attr("action");
$contextPath = "$!{viewUtil.getContextPath()}";
</script>
</html>