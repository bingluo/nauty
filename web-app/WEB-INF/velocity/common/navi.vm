<div class="sixteen columns">
	<div id="navigation">
		<ul id="nav">
			<li><a href="/">首页</a></li>
			#foreach($root in $cats)
			<li><a href="/${root.uriName}#if($root.children.size()==0).html#else/#end">$root.catName</a>
				#set($children = $root.children)
				#if($children.size()>0)
    				<ul>
    				#foreach($child in $children)
    				<li><a href="/${root.uriName}/${child.id}/">$child.catName</a></li>
    				#end
    				</ul>
				#end
			</li>
			#end
		</ul>
	</div> 
	<div class="clear"></div>
</div>