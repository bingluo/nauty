	<!-- Header -->
	<div id="header">
		<!-- Logo -->
		<div class="eight columns">
			<div id="logo" style="margin:0 auto 10px 10px">
				<a href="$!{viewUtil.getContextPath()}/"><img src="$!{viewUtil.getContextPath()}/static/images/new-logo.jpg" alt="logo" /></a>
				<div class="clear"></div>
			</div>
		</div>
		<!-- Social / Contact -->
		<div class="eight columns">
			<div class="tooltips">
				<div class="tags" style="text-align:right;font-size:14px;font-weight:bold;">
				#if($!{curUser})
					$!{curUser.userName},您好 
					<a href="$!{viewUtil.getContextPath()}/designer/$!{curUser.id}">我的空间</a>
					<a href="$!{viewUtil.getContextPath()}/log-off">退出</a>
				#else
					<a href="$!{viewUtil.getContextPath()}/sign-in">登录</a>
					<a href="$!{viewUtil.getContextPath()}/register">注册</a>
				#end
				</div>
				<!-- Social Icons -->
    			<ul class="social-icons" style="margin-top:20px;">
					#foreach($social in $socials)
    				<li class="$!{social.parameterKey}"><a href="$!{social.parameterValue}">$!{social.parameterName}</a></li>
					#end
    			</ul>
    			<div class="clear"></div>
    			<!-- Contact Details -->
    			<div id="contact-details" style="margin-top:15px">
    				<ul>
    					<li><i class="mini-ico-envelope"></i><a href="$!{viewUtil.getContextPath()}/contact.html" rel="tooltip" data-original-title="给我们留言">${email}</a></li>
    					<li><i class="mini-ico-user"></i>${phone}</li>
    				</ul>
    			</div>
			</div>
		</div>

	</div>
	<!-- Header / End -->